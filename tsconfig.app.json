{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Debugging */
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Path mapping for libs */
    "baseUrl": ".",
    "paths": {
      "livekit-client": ["./libs/livekit-client/src/index.ts"],
      "livekit-client/*": ["./libs/livekit-client/src/*"],
      "@livekit/components-core/*": ["./libs/@livekit/components-core/src/*"],
      "@livekit/components-react/*": ["./libs/@livekit/components-react/src/*"],
      "@livekit/components-core": [
        "./libs/@livekit/components-core/src/index.ts"
      ],
      "@livekit/components-react": [
        "./libs/@livekit/components-react/src/index.ts"
      ],
      "@livekit/track-processors/*": ["./libs/@livekit/track-processors/src/*"],
      "@livekit/track-processors": [
        "./libs/@livekit/track-processors/src/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "libs/livekit-client/src",
    "libs/@livekit/components-core/src",
    "libs/@livekit/components-react/src",
    "libs/@livekit/track-processors/src"
  ]
}
